<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
  <link rel="stylesheet" href="/overview.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
  <link href="https://fonts.googleapis.com/css?family=Poppins:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/js/all.min.js"></script>
  <style>
    /* Basic table styles */
    #table {
        width: 100%;
        border-collapse: collapse;
    }
    #table th, #table td {
        border: 1px solid #ddd;
        padding: 8px;
    }
    #table tr:nth-child(even) {
        background-color: #f2f2f2;
    }
    #table th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: var(--bg-secondary);
        color: white;
    }

   
</style>

</head>

<body style="background-color: white;">
  <div id="head3r">
    <div class="toggle">
      <i class="fas fa-bars"></i>
    </div>
    <img src="/XpertRupees_Logo_White.svg" alt="">
    <a href="/auth/logout">
      <i class="fas fa-sign-out-alt"></i>
    </a>
  </div>
  <nav>
    <ul>
      <li>
        <a class="toggle">
          <span class="icon"><i class="fas fa-bars"></i></span>
          <img src="/XpertRupees_Logo_White.svg" alt="">
        </a>
      </li>
      <li>
        <a href="/dashboard/overview">
          <span class="icon"><i class="fas fa-home"></i></span>
          <span class="title">Overview</span>
        </a>
      </li>
      <% if (role==='admin' ) { %>
      <li>
        <a href="/dashboard/users">
          <span class="icon"><i class="fas fa-user"></i></span>
          <span class="title">Users</span>
        </a>
      </li>
      <% } %>
      <li>
        <a href="/dashboard/leads">
          <span class="icon"><i class="fas fa-envelope"></i></span>
          <span class="title">Leads</span>
        </a>
      </li>
      <li>
        <a href="/auth/logout">
          <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
          <span class="title">Sign Out</span>
        </a>
      </li>
    </ul>
  </nav>
  <div class="main">
    <h1 id="Ltitle">Users</h1>
    <a id="createbtn" href="/dashboard/users/create">CREATE</a>
    <table id="table">
      <thead>
        <tr>
          <th>User Name</th>
          <th>Role</th>
          <th>EDIT</th>
          <th>DELETE</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.username %></td>
          <td> <%= user.role %></td>
          <td><a id="editbtn" href="/dashboard/users/edit/<%= user._id %>">Edit</a></td>
          <td><a id="delbtn" href="/dashboard/users/delete/<%= user._id %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
<script src="/overview.js"></script>

</html>